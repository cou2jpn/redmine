<%= error_messages_for 'attachment' %>

<h2><%=l(:label_attachment)%></h2>

<%= labelled_form_for @attachment do |f| %>

  <div class="box tabular">
  <p><%= f.text_field :filename, :required => true %></p>
  <p><%= f.text_field :description %></p>
  <% @attachment.custom_field_values.each do |value| %>
    <p><%= custom_field_tag_with_label :attachment, value, :required => value.custom_field.is_required? %></p>
  <% end %>
  </div>

  <p><%= submit_tag l(:button_save) %>
  <%= link_to l(:button_cancel), url_for(@attachment.container) %> </p>
<% end %>

